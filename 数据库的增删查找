》2《及数据库表的增删查改 
create table stu_test2(
	id int,
	name varchar(2)
	);
	
	
desc stu_test2;desc>>describe;

drop table stu_test2;//删除表
create table student(
	id int,
	sequence_numbers int,
	name varchar(30),
	qq_mail varchar(100)
	
); 


insert into student values(01,417090,'xx','1503179376@qq.com');
insert into student values(02,418090,'yy','15258697888@qq.com');
insert into student(id,sequence_numbers) values(3,0000001);//指定列插入
insert into student(id,sequence_numbers) values(4,0000002);//指定列插入
select id+2000,sequence_numbers,name from student;

create table score(
	chinese int,
	math int,
	english int,
	discrete_math int
);

select math,math+chinese+discrete_math+english from score;

select distinct math from score;

asc       scend;升序
desc      descend;降序
